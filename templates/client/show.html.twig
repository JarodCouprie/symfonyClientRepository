{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ client.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ client.poste }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">Retour à la liste</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}">Modifier</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
