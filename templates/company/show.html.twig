{% extends 'base.html.twig' %}

{% block title %}Entreprise {{ company.name }}{% endblock %}

{% block body %}
    <h1>Entreprise</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ company.name }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ company.address }}</td>
        </tr>
        <tr>
            <th>Numéro de téléphone</th>
            <td>{{ company.phone }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_company_index') }}">Retour à la liste</a>

    <a href="{{ path('app_company_edit', {'id': company.id}) }}">Modifier</a>

    {{ include('company/_delete_form.html.twig') }}
{% endblock %}
